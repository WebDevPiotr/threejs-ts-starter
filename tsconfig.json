{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "baseUrl": "src",
  },
  "include": [
    "src"
  ],
  "files": [
    "src/index.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}